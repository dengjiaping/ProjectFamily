<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:state_pressed="true">
        <shape>
            <gradient android:startColor="#6e94e8" android:endColor="#2261de"
                android:angle="0" />
            <stroke android:width="0dip" android:color="@null" />
            <corners android:topLeftRadius="0dip" android:topRightRadius="0dip"
                android:bottomLeftRadius="0dip" android:bottomRightRadius="0dip"/>
            <padding android:left="4dp" android:top="4dp"
                android:right="4dp" android:bottom="4dp" />
        </shape>
    </item>
    
    <item android:state_focused="true">
        <shape>
            <gradient android:startColor="#6e94e8" android:endColor="#2261de"
                android:angle="0" />
            <stroke android:width="0dip" android:color="@null" />
           <corners android:topLeftRadius="0dip" android:topRightRadius="0dip"
                android:bottomLeftRadius="0dip" android:bottomRightRadius="0dip"/>
            <padding android:left="4dp" android:top="4dp"
                android:right="4dp" android:bottom="4dp" />
        </shape>
    </item>
    
	<item>
		<shape>
			<gradient android:startColor="#ffffffff" android:endColor="#ffffffff"
				android:angle="0" />
			<stroke android:width="1dip" android:color="#e4e4ea" />
			<corners android:topLeftRadius="0dip" android:topRightRadius="0dip"
                android:bottomLeftRadius="0dip" android:bottomRightRadius="0dip"/>
            <padding android:left="4dp" android:top="4dp"
                android:right="4dp" android:bottom="4dp" />
		</shape>
	</item>
	
</selector>