<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <gradient android:angle="90" android:endColor="#2261de" android:startColor="#6e94e8" />

            <corners android:bottomLeftRadius="5dip" android:bottomRightRadius="5dip"/>
        </shape>  
    </item>
    <item android:state_focused="true">
        <shape>
            <gradient android:angle="90" android:endColor="#2261de" android:startColor="#6e94e8" />

            <corners android:bottomLeftRadius="5dip" android:bottomRightRadius="5dip"/>
        </shape>  
    </item>
    <item>
		<shape>
			<gradient android:startColor="#ffffffff" android:endColor="#ffffffff"
                android:angle="0" />
			<corners android:bottomLeftRadius="5dip" android:bottomRightRadius="5dip"/>
		</shape>
	</item>

</selector>