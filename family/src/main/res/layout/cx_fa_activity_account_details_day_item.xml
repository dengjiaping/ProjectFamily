<?xml version="1.0" encoding="utf-8"?>
<!-- 记账明细页面每天的记账条目-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"    
    android:background="#f8f8f8">

    <LinearLayout
        android:id="@+id/cx_fa_accounting_detail_elv_day_item_layout"
        android:layout_width="match_parent"
        android:layout_height="40dip"       
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingLeft="8dip"
        android:paddingRight="8dip" >
        
        <ImageView 
            android:id="@+id/cx_fa_accounting_detail_elv_day_item_iv_author"
        	    android:layout_marginLeft="5dip"
        	    android:layout_width="2dip"
            	android:layout_height="12dip"
            	android:layout_gravity="center_vertical"
            	android:background="#edb2b2"/>

        <TextView
            android:id="@+id/cx_fa_accounting_detail_elv_day_item_tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_weight="1"
            
            android:textColor="#696969"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/cx_fa_accounting_detail_elv_day_item_tv_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="@string/cx_fa_accounting_category_out_entertainment_short"
            android:textColor="#696969"
            android:textSize="12sp" />
        

        <ImageView
            android:layout_width="12dip"
            android:layout_height="12dip"
            android:layout_gravity="right|center_vertical"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="8dip"
            android:src="@drawable/table_front_accessory_arrow" />
    </LinearLayout>
    <View 
        android:id="@+id/cx_fa_accounting_detail_elv_day_item_line"
           android:layout_width="match_parent" 
           android:layout_height="1dp"
           android:background="#e4e4ea"/>
    
    
    

</LinearLayout>