<?xml version="1.0" encoding="utf-8"?>
<!-- 记账明细页面每月条目UI -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dip"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="5dip" >

        <LinearLayout
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:gravity="center"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/cx_fa_accounting_detail_elv_month_tv_month"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12"
                    android:layout_gravity="bottom"
                    android:textColor="#bebebe"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/cx_fa_accounting_detail_elv_month_tv_month_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="月"
                    android:layout_gravity="bottom"
                    android:textColor="#bebebe"
                    android:textSize="15sp" />
            </LinearLayout>
        </LinearLayout><!-- 某月 -->

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cx_fa_accounting_in"
                    android:textColor="#bebebe"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/cx_fa_accounting_detail_elv_month_tv_in"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dip"
                    android:text="103,345元"
                    android:textColor="#696969"
                    android:textSize="12sp" />
            </LinearLayout><!-- 收入 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cx_fa_accounting_out"
                    android:textColor="#bebebe"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/cx_fa_accounting_detail_elv_month_tv_out"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dip"
                    android:text="103,345元"
                    android:textColor="#696969"
                    android:textSize="12sp" />
            </LinearLayout><!-- 支出 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cx_fa_accounting_surplus"
                    android:textColor="#bebebe"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/cx_fa_accounting_detail_elv_month_tv_surplus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dip"
                    android:text="103,345元"
                    android:textColor="#696969"
                    android:textSize="12sp" />
            </LinearLayout><!-- 结余 -->
        </LinearLayout>
        
        
        <ImageView 
            android:id="@+id/cx_fa_accounting_detail_elv_month_iv_updown"
            android:src="@drawable/accounting_arrow_down"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="12dip"
            android:layout_marginLeft="5dip"
            android:layout_width="15dip"
            android:layout_height="15dip"/>
        
        
    
    </LinearLayout>
    
   <!--  <LinearLayout
        android:background="#efeff2" 
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <ListView 
            android:layout_width="match_parent"
        	android:layout_height="wrap_content" />
        
    </LinearLayout> -->

    <View 
           android:layout_width="match_parent" 
           android:layout_height="1dp"
           android:background="#e4e4ea"/>
    

</LinearLayout>