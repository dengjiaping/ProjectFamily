<?xml version="1.0" encoding="utf-8"?>
<!-- 记账首页 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cx_fa_co_background_grey"
    android:orientation="vertical" >

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/cx_fa_activity_title" />

    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/cx_fa_co_background_grey" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/cx_fa_co_background_grey"
            android:orientation="vertical" >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="150dip"
                    android:scaleType="centerCrop"
                    android:src="@drawable/accounting_homepage_image" />
				
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                
                <LinearLayout
                    android:layout_width="90dip"
                    android:layout_height="90dip"
                    android:layout_marginLeft="30dip"
                    android:layout_marginTop="35dip"
                    android:background="@drawable/accounting_databack"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/cx_fa_accounting_homepage_title_tv_year_and_month"
                        android:layout_width="wrap_content"
                        android:layout_height="15dip"
                        android:layout_marginTop="5dip"
                        android:gravity="center"
                        android:text="2013年11月"
                        android:textColor="#ffffff"
                        android:textSize="12sp" />

                    <LinearLayout
                        android:layout_width="60dip"
                        android:layout_height="50dip"
                        android:layout_marginBottom="-7dip"
                        android:layout_marginTop="-7dip"
                        android:gravity="center" >

                        <TextView
                            android:id="@+id/cx_fa_accounting_homepage_title_tv_day"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:text="28"
                            android:textColor="#ffffff"
                            android:textScaleX="1.3"
                            android:textSize="32sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/cx_fa_accounting_homepage_title_tv_week"
                        android:layout_width="wrap_content"
                        android:layout_height="15dip"
                        android:layout_marginBottom="5dip"
                        android:gravity="center"
                        android:text="星期三"
                        android:textColor="#ffffff"
                        android:textSize="12sp" />
                </LinearLayout>
                </LinearLayout>
            </FrameLayout><!-- 背景图和今日日期显示 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:layout_marginTop="20dip"
                android:background="@drawable/cx_fa_accounting_homepage_bg_white_with_stroke"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="5dip" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/cx_fa_accounting_homepage_month_in"
                            android:textColor="#37322f"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/cx_fa_accounting_homepage_tv_month_in"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:gravity="right"
                            android:text="0元"
                            android:textColor="#37322f"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#e4e4ea" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="5dip" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/cx_fa_accounting_homepage_month_out"
                            android:textColor="#37322f"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/cx_fa_accounting_homepage_tv_month_out"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:gravity="right"
                            android:text="0元"
                            android:textColor="#37322f"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#e4e4ea" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="5dip" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/cx_fa_accounting_homepage_month_surplus"
                            android:textColor="#37322f"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/cx_fa_accounting_homepage_tv_month_surplus"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:gravity="right"
                            android:text="0元"
                            android:textColor="#37322f"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <View
                        android:layout_width="1dip"
                        android:layout_height="match_parent"
                        android:background="#e4e4ea" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="5dip" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/cx_fa_accounting_homepage_year_surplus"
                            android:textColor="#37322f"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/cx_fa_accounting_homepage_tv_year_surplus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dip"
                            android:text="0元"
                            android:textColor="#37322f"
                            android:textSize="16sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout><!-- 本月及年结余  -->

            <Button
                android:id="@+id/cx_fa_accounting_homepage_btn_add_account"
                android:layout_width="match_parent"
                android:layout_height="60dip"
                android:layout_marginLeft="18dip"
                android:layout_marginRight="18dip"
                android:layout_marginTop="20dip"
                android:background="@drawable/neighbor_btn_orange"
                android:shadowDx="0"
                android:shadowDy="1"
                android:text="@string/cx_fa_accounting_homepage_add_account"
                android:textColor="@color/cx_fa_co_btn_brown_text"
                android:textSize="27sp" /><!-- 记一笔 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:layout_marginTop="20dip"
                android:background="#e4e4ea" >

                <LinearLayout
                    android:id="@+id/cx_fa_accounting_homepage_detail_layout"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginRight="1dip"
                    android:layout_weight="1"
                    android:background="@drawable/cx_fa_accounting_homepage_detail_bg_white"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/cx_fa_accounting_homepage_tv_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="40dip"
                        android:gravity="center"
                        android:text="@string/cx_fa_accounting_homepage_detail"
                        android:textColor="#eba179"
                        android:textSize="18sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="10dip" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/cx_fa_accounting_homepage_pie_layout"
                    android:layout_width="match_parent"
                    android:layout_height="50dip"
                    android:layout_marginLeft="1dip"
                    android:layout_weight="1"
                    android:background="@drawable/cx_fa_accounting_homepage_detail_bg_gray"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/cx_fa_accounting_homepage_tv_pie"
                        android:layout_width="wrap_content"
                        android:layout_height="40dip"
                        android:gravity="center"
                        android:text="@string/cx_fa_accounting_homepage_pie"
                        android:textColor="#37322f"
                        android:textSize="16sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="10dip" />
                </LinearLayout>
            </LinearLayout><!-- 明细和饼图按钮 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:layout_marginTop="-10dip"
                android:background="@drawable/cx_fa_accounting_homepage_bg_white_no_stroke"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/cx_fa_accounting_homepage_detail_items_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="8dip"
                    android:paddingRight="8dip"
                    android:paddingTop="12dip" 
                    android:paddingBottom="12dip" 
                    >

                    <TextView
                        android:id="@+id/cx_fa_accounting_homepage_detail_more"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginRight="8dip"
                        android:gravity="right"
                        android:text="@string/cx_fa_accounting_homepage_detail_more"
                        android:textColor="#37322f"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>
            
            <View 
                android:layout_width="match_parent"
                android:layout_height="20dip"/>
            
        </LinearLayout>
    </ScrollView>

</LinearLayout>