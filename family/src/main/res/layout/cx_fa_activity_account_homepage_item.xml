<?xml version="1.0" encoding="utf-8"?>
<!-- 记账首页明细条目 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
            android:paddingLeft="8dip"
            android:paddingRight="8dip"
            android:paddingTop="12dip"
            android:paddingBottom="12dip"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:orientation="horizontal">
            
        
        	<ImageView 
        	    android:id="@+id/cx_fa_accounting_homepage_detail_iv_author"
        	    android:layout_marginLeft="5dip"
        	    android:layout_width="2dip"
            	android:layout_height="12dip"
            	android:layout_gravity="center_vertical"
            	android:background="#b2c8ed" />

            <TextView
                android:id="@+id/cx_fa_accounting_homepage_detail_tv_date"
                android:layout_marginLeft="5dip"
                android:layout_width="60dip"
                android:layout_height="wrap_content"
                android:text="今天"
                android:textColor="#37322f"
                android:textSize="12sp" />
            
            <TextView
                android:id="@+id/cx_fa_accounting_homepage_detail_tv_content"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="支出200元"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:textColor="#37322f"
                android:textSize="12sp" />
           
        
            
	            <TextView
	                android:id="@+id/cx_fa_accounting_homepage_detail_tv_type"
	                android:layout_gravity="right"
	                android:gravity="right"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="@string/cx_fa_accounting_category_out_education_short"
	                android:textColor="#37322f"
	                android:textSize="12sp"
	                android:layout_marginRight="8dip" />
	            
	            <ImageView
	                android:layout_gravity="right|center_vertical"
	                android:layout_width="12dip"
	                android:layout_height="12dip"
					android:src="@drawable/table_front_accessory_arrow"
	                android:layout_marginRight="12dip" />
          
      </LinearLayout>
        
        <View 
           android:layout_width="match_parent" 
           android:layout_height="1dp"
           android:background="#e4e4ea"/>
    
    
    

</LinearLayout>