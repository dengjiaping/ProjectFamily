<!-- 添加二人空间的分享 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e4e4ea"
    android:orientation="vertical" >

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/cx_fa_activity_title" />
    <FrameLayout 
        android:layout_width="match_parent" 
        android:layout_height="match_parent">
        
        <LinearLayout 
            android:orientation="vertical"
            android:layout_width="match_parent" 
        	android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="14dip"
        android:layout_marginRight="14dip"
        android:background="#e4e4ea"
        android:orientation="vertical" >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dip"
                    android:background="@drawable/edittext_bg"
                    android:orientation="vertical"
                    android:padding="8dip" >

                    <EditText
                        android:id="@+id/feed_text_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:gravity="top|left"
                        android:hint="@string/cx_fa_role_send_text_hint"
                        android:maxLength="2000"
                        android:maxLines="7"
                        android:minHeight="80dip"
                        android:textColor="@android:color/black" />
                 <LinearLayout 
	                android:id="@+id/nb_feed_emotion_layout"
	                android:layout_width="40dip" android:layout_height="40dip"
	                android:layout_gravity="bottom|right"
	                android:gravity="center"
	                >
	            <ImageView 
	                android:id="@+id/nb_feed_emotion"
	            	android:layout_width="30dip" android:layout_height="30dip"	            	
	            	
	            	android:src="@drawable/wezone_face"
	            	/>
	            </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/cx_fa_shared_photos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dip"
                        android:layout_marginTop="10dip"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <com.chuxin.family.widgets.CxImageView
                            android:id="@+id/cx_fa_first_9image"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:adjustViewBounds="true"
                            android:background="@drawable/cx_fa_bg_white_corner_rect_with_grey_border"
                            android:maxHeight="240dp"
                            android:maxWidth="240dp"
                            android:padding="6dip"
                            android:scaleType="fitCenter"
                            android:src="@drawable/wezone_ninegrid_bg" />

                        <com.chuxin.family.widgets.CxImageView
                            android:id="@+id/cx_fa_second_9image"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dip"
                            android:layout_marginRight="5dip"
                            android:layout_weight="1"
                            android:adjustViewBounds="true"
                            android:background="@drawable/cx_fa_bg_white_corner_rect_with_grey_border"
                            android:maxHeight="240dp"
                            android:maxWidth="240dp"
                            android:padding="6dip"
                            android:scaleType="fitCenter"
                            android:src="@drawable/wezone_ninegrid_bg" />

                        <com.chuxin.family.widgets.CxImageView
                            android:id="@+id/cx_fa_third_9image"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:adjustViewBounds="true"
                            android:background="@drawable/cx_fa_bg_white_corner_rect_with_grey_border"
                            android:maxHeight="240dp"
                            android:maxWidth="240dp"
                            android:padding="6dip"
                            android:scaleType="fitCenter"
                            android:src="@drawable/wezone_ninegrid_bg" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dip"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <com.chuxin.family.widgets.CxImageView
                            android:id="@+id/cx_fa_forth_9image"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:adjustViewBounds="true"
                            android:background="@drawable/cx_fa_bg_white_corner_rect_with_grey_border"
                            android:maxHeight="140dp"
                            android:maxWidth="140dp"
                            android:padding="6dip"
                            android:scaleType="fitCenter"
                            android:src="@drawable/wezone_ninegrid_bg" />

                        <com.chuxin.family.widgets.CxImageView
                            android:id="@+id/cx_fa_fifth_9image"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dip"
                            android:layout_marginRight="5dip"
                            android:layout_weight="1"
                            android:adjustViewBounds="true"
                            android:background="@drawable/cx_fa_bg_white_corner_rect_with_grey_border"
                            android:maxHeight="140dp"
                            android:maxWidth="140dp"
                            android:padding="6dip"
                            android:scaleType="fitCenter"
                            android:src="@drawable/wezone_ninegrid_bg" />

                        <com.chuxin.family.widgets.CxImageView
                            android:id="@+id/cx_fa_sixth_9image"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:adjustViewBounds="true"
                            android:background="@drawable/cx_fa_bg_white_corner_rect_with_grey_border"
                            android:maxHeight="140dp"
                            android:maxWidth="140dp"
                            android:padding="6dip"
                            android:scaleType="fitCenter"
                            android:src="@drawable/wezone_ninegrid_bg" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dip"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <com.chuxin.family.widgets.CxImageView
                            android:id="@+id/cx_fa_seventh_9image"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:adjustViewBounds="true"
                            android:background="@drawable/cx_fa_bg_white_corner_rect_with_grey_border"
                            android:maxHeight="140dp"
                            android:maxWidth="140dp"
                            android:padding="6dip"
                            android:scaleType="fitCenter"
                            android:src="@drawable/wezone_ninegrid_bg" />

                        <com.chuxin.family.widgets.CxImageView
                            android:id="@+id/cx_fa_eighth_9image"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dip"
                            android:layout_marginRight="5dip"
                            android:layout_weight="1"
                            android:adjustViewBounds="true"
                            android:background="@drawable/cx_fa_bg_white_corner_rect_with_grey_border"
                            android:maxHeight="140dp"
                            android:maxWidth="140dp"
                            android:padding="6dip"
                            android:scaleType="fitCenter"
                            android:src="@drawable/wezone_ninegrid_bg" />

                        <com.chuxin.family.widgets.CxImageView
                            android:id="@+id/cx_fa_nineth_9image"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:adjustViewBounds="true"
                            android:background="@drawable/cx_fa_bg_white_corner_rect_with_grey_border"
                            android:maxHeight="140dp"
                            android:maxWidth="140dp"
                            android:padding="6dip"
                            android:scaleType="fitCenter"
                            android:src="@drawable/wezone_ninegrid_bg" />
                    </LinearLayout>
                </LinearLayout>

                <!-- 同步到蜜邻 -->
                <LinearLayout
                    android:id="@+id/cx_fa_shared_is_sync_neighbour"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dip"
                    android:background="@drawable/cx_fa_round_corner_white_bg"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="6dip"
                    android:paddingLeft="10dip"
                    android:paddingRight="10dip"
                    android:paddingTop="6dip" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginBottom="0dip"
                        android:layout_marginRight="2dip"
                        android:layout_weight="1"
                        android:text="@string/cx_fa_zone_share_sync_neighbour"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/cx_fa_is_sync"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginBottom="0dip"
                        android:layout_marginRight="2dip"
                        android:text="@string/cx_fa_sync_closing"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/cx_fa_is_sync_imageview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/set_checkoff" />
                </LinearLayout>
                
                <!-- 同步到第三方平台 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dip"
                    android:background="@drawable/cx_fa_round_corner_white_bg"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="6dip"
                    android:paddingLeft="10dip"
                    android:paddingRight="10dip"
                    android:paddingTop="6dip" android:layout_marginBottom="20dp">
                    <ImageView android:id="@+id/share_to_qzone"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:layout_weight="0" android:src="@drawable/logo_qzone_disable"
                        android:layout_margin="3dp"/>
                    <ImageView android:id="@+id/share_to_wechatmoments"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:layout_weight="0" android:src="@drawable/logo_wechatmoments_disable"
                        android:layout_margin="3dp"/>
                </LinearLayout>
                
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
    
        </LinearLayout>
    
         
         
         <LinearLayout android:orientation="vertical" android:layout_width="match_parent"
		        android:layout_height="wrap_content" android:layout_gravity="bottom" 
		        android:id="@+id/cx_fa_neighbour_add_input_layout">
		        <com.chuxin.family.widgets.CxInputPanel
		            android:id="@+id/cx_fa_widget_input_layer"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:visibility="gone"
		            />
			    <!-- 为标签预留 -->
		    </LinearLayout>
         
         </FrameLayout>

</LinearLayout>