<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cx_fa_co_background_grey"
    android:orientation="vertical" >

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/cx_fa_activity_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dip"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="36dip"
                android:background="@drawable/cx_fa_calendar_memorial_day_item_orange_bg"
                android:gravity="center"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="13dip"
                    android:layout_height="13dip"
                    android:layout_marginRight="-5dip"
                    android:layout_marginLeft="15dip"
                    android:src="@drawable/calendar_heart" />

                <TextView
                    android:id="@+id/cx_fa_calendar_memorial_day_content_title_tv"
                    android:paddingLeft="10dip"
                    android:paddingRight="10dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我们已经在一起"
                    android:textColor="#ffffff"
                    android:singleLine="true"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_width="13dip"
                    android:layout_height="13dip"
                    android:layout_marginLeft="-5dip"
                    android:layout_marginRight="15dip"
                    android:src="@drawable/calendar_heart" />
            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1px"
                android:background="#20000000" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:minHeight="160dip"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/cx_fa_calendar_memorial_day_content_number_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="45678"
                        android:maxEms="4"
                        android:singleLine="true"
                        android:textColor="#b12c2c"
                        android:textSize="40sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"                       
                        android:layout_alignBottom="@id/cx_fa_calendar_memorial_day_content_number_tv"
                        android:layout_marginLeft="25dip"
                        android:visibility="gone"
                        android:layout_toRightOf="@id/cx_fa_calendar_memorial_day_content_number_tv" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="天"
                            android:textColor="#37322f"
                            android:textSize="18sp" />
                    </LinearLayout>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="5dip"
                    android:gravity="center" >

                    <TextView
                        android:id="@+id/cx_fa_calendar_memorial_day_content_date_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="2014年2月14日"
                        android:textColor="#37322f"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/cx_fa_calendar_memorial_reminder_detail_lv"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:background="@drawable/cx_fa_calendar_item_date_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal"
             >
            
            
            <ImageView 
                android:id="@+id/cx_fa_calendar_memorial_day_reminder_clock_icon"
                android:layout_width="20dip"
            	android:layout_height="20dip"
                android:layout_marginLeft="10dip"
            	android:background="@drawable/calendar_icon_clockblue"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_weight="1"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/cx_fa_calendar_memorial_day_reminder_date_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="每年1月11日"
                        android:textColor="#bebebe"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/cx_fa_calendar_memorial_day_reminder_time_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dip"
                        android:gravity="center"
                        android:text="10:00"
                        android:textColor="#bebebe"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dip"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/cx_fa_calendar_memorial_day_reminder_advance_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="提前3天"
                        android:layout_marginRight="7dip"
                        android:textColor="#bebebe"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/cx_fa_calendar_memorial_day_reminder_target_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        
                        android:gravity="center"
                        android:text="老婆提醒我"
                        android:textColor="#bebebe"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center" >

                <TextView
                    android:id="@+id/cx_fa_calendar_memorial_day_reminder_number_tv"
                    android:layout_marginRight="10dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:gravity="center"
                    android:text="234天后"
                    android:textColor="#bebebe"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:visibility="gone"
            android:layout_marginBottom="30dip"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip" >

            <Button
                android:id="@+id/cx_fa_calendar_memorial_day_delete_btn"
                style="@style/cx_fa_style_orange_button_text"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/neighbour_btnorange"
                android:text="@string/cx_fa_accounting_account_delete"
                android:textColor="@color/cx_fa_co_btn_brown_text"
                android:textSize="16sp" />
        </LinearLayout>
        <!-- 删除按钮 -->

    </LinearLayout>

</LinearLayout>