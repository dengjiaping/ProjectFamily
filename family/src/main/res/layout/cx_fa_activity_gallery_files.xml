<?xml version="1.0" encoding="utf-8"?><!-- 关于界面 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" android:orientation="vertical"
    android:layout_height="match_parent" android:background="@android:color/white">
    <include layout="@layout/cx_fa_activity_title" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:layout_weight="0"/>
    <GridView
	    android:id="@+id/cx_fa_gallery_file_view"
	    style="@style/photo_grid_style"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:numColumns="auto_fit"
	    android:stretchMode="spacingWidth"
	    android:columnWidth="@dimen/file_thumbnail_size"
	    android:verticalSpacing="@dimen/gallery_file_vertical_spacing" 
	    android:horizontalSpacing="@dimen/image_thumbnail_horizontal_spacing" 
	    android:padding="20dp"
	    android:scrollbars="none"
	    />
    
    <GridView
	    android:id="@+id/cx_fa_gallery_image_view"
	    style="@style/photo_grid_style"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:numColumns="auto_fit"
	    android:stretchMode="spacingWidth"
	    android:columnWidth="@dimen/image_thumbnail_size"
	    android:verticalSpacing="@dimen/image_thumbnail_vertical_spacing" 
	    android:horizontalSpacing="@dimen/image_thumbnail_vertical_spacing" 
	    android:scrollbars="none"
	    android:layout_gravity="center_horizontal"
	    />
</LinearLayout>