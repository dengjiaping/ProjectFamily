<?xml version="1.0" encoding="utf-8"?><!-- 关于界面 -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" 
    android:layout_height="wrap_content">
    <LinearLayout
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:padding="3dp"
	    android:background="@drawable/cx_fa_round_corner_gray_bg"
	    >
        <com.chuxin.family.widgets.CxImageView 
	        android:layout_width="@dimen/image_thumbnail_size" 
	        android:layout_height="@dimen/image_thumbnail_size"
	        android:src="@drawable/chatview_imageloading"
	        android:id="@+id/image_src" android:scaleType="center"
	        />
    </LinearLayout>
     
    <ImageView android:background="@drawable/chat_selected"
        android:layout_width="@dimen/image_thumbnail_selected_size" 
        android:layout_height="@dimen/image_thumbnail_selected_size"
        android:scaleType="fitXY"
        android:id="@+id/image_selected"
        />
    
</FrameLayout>