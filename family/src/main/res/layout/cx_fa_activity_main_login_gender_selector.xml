<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!-- <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/cx_fa_activity_title" /> -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/cx_fa_main_login_backimage"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dip"
            android:layout_marginTop="15dip"
            android:text="在小家我是..."
            android:textColor="#90000000"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dip"
            android:gravity="center"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dip"
                android:orientation="vertical"
                android:gravity="center" >

                <ImageView
                    android:id="@+id/cx_fa_main_login_gender_selector_husband_iv"
                    android:layout_width="90dip"
                    android:layout_height="90dip"
                    android:src="@drawable/cx_fa_main_login_gender_selector_husband" />
                
                <TextView 
                    android:layout_marginTop="7dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="老公"
                    android:textColor="#90000000"
                    android:textSize="18sp"/>
                
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dip"
                android:orientation="vertical"
                android:gravity="center" >

                <ImageView
                    android:id="@+id/cx_fa_main_login_gender_selector_wife_iv"
                    android:layout_width="90dip"
                    android:layout_height="90dip"
                    android:src="@drawable/cx_fa_main_login_gender_selector_wife" />
                
                <TextView 
                    android:layout_marginTop="7dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="老婆"
                    android:textColor="#90000000"
                    android:textSize="18sp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>