<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#e4e4e4" >

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/cx_fa_activity_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
       
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_marginTop="20dip" >

        <LinearLayout
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:orientation="horizontal"
        	android:paddingLeft="5dip"
        	android:paddingRight="5dip"
        	android:paddingTop="15dip"
        	android:paddingBottom="15dip"
        	android:background="@drawable/edittext_bg_normal">
        
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:text="帐号："
                    android:textColor="#37322f"
                    android:textSize="14sp" />
            
	        <EditText
	            android:id="@+id/cx_fa_main_register_email_account"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:background="@null"
	            android:hint="输入电子邮箱名"
	            android:textSize="14sp"
	            android:gravity="center_vertical"
	            android:textColor="#37322f" />
        </LinearLayout>
        
        <LinearLayout
            android:layout_marginTop="10dip"
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:orientation="horizontal"
        	android:paddingLeft="5dip"
        	android:paddingRight="5dip"
        	android:paddingTop="15dip"
        	android:paddingBottom="15dip"
        	android:background="@drawable/edittext_bg_normal">
        
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:text="密码："
                    android:textColor="#37322f"
                    android:textSize="14sp" />
            
	        <EditText
	            android:id="@+id/cx_fa_main_register_email_token"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:background="@null"
	            android:hint="输入英文或数字（最低6位）"
	            android:textSize="14sp"
	            android:inputType="textPassword"
	            android:gravity="center_vertical"
	            android:textColor="#37322f" />
        </LinearLayout>
        
        <LinearLayout
            android:layout_marginTop="10dip"
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:orientation="horizontal"
        	android:paddingLeft="5dip"
        	android:paddingRight="5dip"
        	android:paddingTop="15dip"
        	android:paddingBottom="15dip"
        	android:background="@drawable/edittext_bg_normal">
        
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:text="密码："
                    android:textColor="#37322f"
                    android:textSize="14sp" />
            
	        <EditText
	            android:id="@+id/cx_fa_main_register_email_token_too"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:background="@null"
	            android:hint="再次输入相同的密码"
	            android:inputType="textPassword"
	            android:textSize="14sp"
	            android:gravity="center_vertical"
	            android:textColor="#37322f" />
        </LinearLayout>

        

        <LinearLayout
            android:layout_marginTop="15dip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/cx_fa_main_register_btn_layout"
                android:layout_width="match_parent"
                android:layout_height="44dip"
                android:gravity="center"
                android:background="@drawable/cx_fa_setting_version_bg"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="注册"
                    android:textColor="#ffffff"
                    android:textSize="14sp" />
            </LinearLayout>

           
        </LinearLayout>
    </LinearLayout>

</LinearLayout>