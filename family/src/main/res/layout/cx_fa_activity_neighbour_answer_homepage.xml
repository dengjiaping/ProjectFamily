<?xml version="1.0" encoding="utf-8"?>
<!-- 谁家最聪明首页 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8ed6e4"
    android:orientation="vertical" >

    <!-- android:background="#8ed6e4" -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dip"
        android:background="#7bcbdd"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="3dip" >

        <LinearLayout
            android:layout_width="48dip"
            android:layout_height="30dip"
            android:layout_marginLeft="5dip" >

            <ImageView
                android:id="@+id/cx_fa_answer_home_title_back_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/cx_fa_neighbour_answer_homepage_back" />
        </LinearLayout>
        <!-- 返回 -->

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:layout_weight="1"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="15dip"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="3dip"
                    android:layout_weight="1"
                    android:background="@drawable/cx_fa_neighbour_answer_homepage_title_bg"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="2dip"
                    android:paddingLeft="2dip"
                    android:paddingRight="2dip"
                    android:paddingTop="1dip" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="3dip"
                        android:gravity="center_vertical"
                        android:text="@string/cx_fa_answer_home_title_total_score"
                        android:textColor="#ffffff"
                        android:textSize="9sp" />

                    <TextView
                        android:id="@+id/cx_fa_answer_home_title_total_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="marquee"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:text="0"
                        android:textColor="#ffffff"
                        android:textSize="9sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="分"
                        android:textColor="#ffffff"
                        android:textSize="9sp" />
                </LinearLayout>
                <!-- 总得分 -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:background="@drawable/cx_fa_neighbour_answer_homepage_title_bg"
                    android:orientation="horizontal"
                    android:paddingBottom="2dip"
                    android:paddingLeft="2dip"
                    android:paddingRight="2dip"
                    android:paddingTop="1dip" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/cx_fa_answer_home_title_ratio"
                        android:textColor="#ffffff"
                        android:textSize="9sp" />

                    <TextView
                        android:id="@+id/cx_fa_answer_home_title_ratio_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100%"
                        android:textColor="#ffffff"
                        android:textSize="9sp" />
                </LinearLayout>
                <!-- 答题率 -->
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="15dip"
                android:layout_marginTop="1dip"
                android:layout_weight="1"
                android:background="@drawable/cx_fa_neighbour_answer_homepage_title_bg"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="2dip"
                android:paddingRight="2dip" >

                <TextView
                    android:layout_width="49dip"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="6dip"
                    android:text="@string/cx_fa_answer_home_title_smart_ratio"
                    android:textColor="#ffffff"
                    android:textSize="9sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center" >

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical" >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:orientation="horizontal" >

                            <RelativeLayout
                                android:layout_width="80dip"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/cx_fa_neighbour_answer_homepage_title_ratio_bg"
                                android:gravity="center_vertical"
                                android:padding="1dip" >

                                <ImageView
                                    android:id="@+id/cx_fa_answer_home_title_girl_ratio_iv"
                                    android:layout_width="40dip"
                                    android:layout_height="8dip"
                                    android:layout_alignParentRight="true"
                                    android:background="@drawable/cx_fa_neighbour_answer_homepage_title_gril_ratio_bg" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="80dip"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1"
                                android:background="@drawable/cx_fa_neighbour_answer_homepage_title_ratio_bg"
                                android:padding="1dip" >

                                <ImageView
                                    android:id="@+id/cx_fa_answer_home_title_boy_ratio_iv"
                                    android:layout_width="40dip"
                                    android:layout_height="8dip"
                                    android:background="@drawable/cx_fa_neighbour_answer_homepage_title_boy_ratio_bg" />
                            </RelativeLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@null"
                            android:gravity="center" >

                            <ImageView
                                android:layout_width="15dip"
                                android:layout_height="15dip"
                                android:scaleType="centerCrop"
                                android:src="@drawable/talent_heart" />
                            <!-- 红心 -->
                        </LinearLayout>
                    </FrameLayout>
                </LinearLayout>
            </LinearLayout>
            <!-- 聪明贡献比 -->
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:padding="1dip" >

                <com.chuxin.family.widgets.CxImageView
                    android:id="@+id/cx_fa_answer_home_title_girl_icon_iv"
                    android:layout_width="30dip"
                    android:layout_height="30dip"
                    android:scaleType="centerCrop"
                    android:src="@drawable/cx_fa_wf_icon" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dip"
                android:layout_marginRight="5dip"
                android:background="#ffffff"
                android:padding="1dip" >

                <com.chuxin.family.widgets.CxImageView
                    android:id="@+id/cx_fa_answer_home_title_boy_icon_iv"
                    android:layout_width="30dip"
                    android:layout_height="30dip"
                    android:scaleType="centerCrop"
                    android:src="@drawable/cx_fa_hb_icon" />
            </LinearLayout>
        </LinearLayout>
        <!-- 头像 -->
    </LinearLayout>
    <!-- title部分 -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-50dip"
                    android:scaleType="centerCrop"
                    android:src="@drawable/talent_image" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/cx_fa_answer_home_start_btn"
                    android:layout_width="135dip"
                    android:layout_height="55dip"
                    android:layout_marginTop="230dip"
                    android:background="@drawable/cx_fa_neighbour_answer_homepage_start_btn_bg" />

                <TextView
                    android:id="@+id/cx_fa_answer_home_leave_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dip"
                    android:text="@string/cx_fa_answer_home_today_remain"
                    android:textColor="#37322f"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_marginTop="20dip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"                    
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dip"
                        android:layout_marginLeft="15dip"
                        android:layout_marginRight="15dip" >

                        <LinearLayout
                            android:id="@+id/cx_fa_answer_home_week_rank_layout"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginRight="3dip"
                            android:layout_weight="1"
                            android:background="#cee9ea"
                            android:gravity="center"
                            android:orientation="vertical" >

                            <TextView
                                android:id="@+id/cx_fa_answer_home_week_rank_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="30dip"
                                android:gravity="center"
                                android:text="@string/cx_fa_answer_home_tab_week_rank"
                                android:textColor="#ffffff"
                                android:textSize="15sp" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="10dip" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/cx_fa_answer_home_total_rank_layout"
                            android:layout_width="match_parent"
                            android:layout_height="40dip"
                            android:layout_marginLeft="3dip"
                            android:layout_marginRight="3dip"
                            android:layout_weight="1"
                            android:background="#a9dcdd"
                            android:gravity="center"
                            android:orientation="vertical" >

                            <TextView
                                android:id="@+id/cx_fa_answer_home_total_rank_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="30dip"
                                android:gravity="center"
                                android:text="@string/cx_fa_answer_home_tab_total_rank"
                                android:textColor="#ffffff"
                                android:textSize="12sp" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="10dip" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/cx_fa_answer_home_ratio_rank_layout"
                            android:layout_width="match_parent"
                            android:layout_height="40dip"
                            android:layout_marginLeft="3dip"
                            android:layout_weight="1"
                            android:background="#a9dcdd"
                            android:gravity="center"
                            android:orientation="vertical" >

                            <TextView
                                android:id="@+id/cx_fa_answer_home_ratio_rank_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="30dip"
                                android:gravity="center"
                                android:text="@string/cx_fa_answer_home_tab_ratio_rank"
                                android:textColor="#ffffff"
                                android:textSize="12sp" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="10dip" />
                        </LinearLayout>
                    </LinearLayout>
                    <!-- 排行标签 -->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-10dip"
                        android:background="#cee9ea"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:id="@+id/cx_fa_answer_home_neighbour_items_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical" />
                        <!-- 排行 -->

                    </LinearLayout>
                </LinearLayout>
<!-- 
                <LinearLayout
                    android:id="@+id/cx_fa_answer_home_fold_or_unfold_layout"
                    android:layout_width="match_parent"
                    android:layout_height="30dip"
                    android:background="#cee9ea"
                    android:gravity="center" >

                    <TextView
                        android:id="@+id/cx_fa_answer_home_fold_or_unfold_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/cx_fa_answer_home_item_unfold"
                        android:textColor="#37322f"
                        android:textSize="12sp" />

                    <ImageView
                        android:id="@+id/cx_fa_answer_home_fold_or_unfold_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="12dip"
                        android:layout_marginLeft="3dip"
                        android:src="@drawable/talent_tab_down" />
                </LinearLayout>
                    打开收起 -->
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>


</LinearLayout>