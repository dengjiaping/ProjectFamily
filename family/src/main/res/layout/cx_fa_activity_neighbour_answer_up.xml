<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" >

        <ImageView
            android:id="@+id/cx_fa_answer_up_shine_iv"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/talent_shine" />

        <ImageView            
            android:layout_margin="30dip"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/talent_star" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <ImageView
                android:layout_marginTop="120dip"
                android:src="@drawable/talent_rank_word"
                android:layout_width="match_parent"
                android:layout_height="40dip" />
 <!-- 排名上升 -->

            <LinearLayout
                android:layout_marginLeft="60dip"
                android:layout_marginTop="50dip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <LinearLayout
                    
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <ImageView
                        android:src="@drawable/talent_rank_up"
                        android:layout_width="45dip"
                        android:layout_height="45dip" />
                </LinearLayout>

                <LinearLayout
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="5dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <com.chuxin.family.widgets.CxImageView
                        android:id="@+id/cx_fa_answer_up_my_gril_icon_iv"
                        android:src="@drawable/cx_fa_wf_icon"
                        android:scaleType="centerCrop"
                        android:layout_width="33dip"
                        android:layout_height="33dip" />
                </LinearLayout>

                <LinearLayout
                    android:layout_marginLeft="5dip"
                    android:layout_gravity="bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <com.chuxin.family.widgets.CxImageView
                        android:id="@+id/cx_fa_answer_up_my_boy_icon_iv"
                        android:src="@drawable/cx_fa_hb_icon"
                        android:layout_width="33dip"
                        android:scaleType="centerCrop"
                        android:layout_height="33dip" />
                </LinearLayout>

                <LinearLayout
                    android:gravity="bottom"
                    android:layout_marginLeft="5dip"
                    android:layout_gravity="bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/cx_fa_answer_up_my_family_name_tv"
                        android:text="@string/cx_fa_neighbour_family_name"
                        android:textColor="#ffffff"
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/cx_fa_answer_up_my_score_tv"
                        android:text="23456"
                        android:textColor="#fffc00"
                        android:textSize="15sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
 <!-- 我们一家 -->

            <LinearLayout
                android:layout_marginLeft="105dip"
                android:layout_marginTop="30dip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <LinearLayout
                    
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <ImageView
                        android:src="@drawable/talent_rank_down"
                        android:layout_width="45dip"
                        android:layout_height="45dip" />
                </LinearLayout>

                <LinearLayout
                    
                    android:layout_marginLeft="5dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <com.chuxin.family.widgets.CxImageView
                        android:id="@+id/cx_fa_answer_up_other_gril_icon_iv"
                        android:src="@drawable/cx_fa_wf_icon"
                        android:scaleType="centerCrop"
                        android:layout_width="33dip"
                        android:layout_height="33dip" />
                </LinearLayout>

                <LinearLayout
                    android:layout_marginLeft="5dip"
                    
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <com.chuxin.family.widgets.CxImageView
                        android:id="@+id/cx_fa_answer_up_other_boy_icon_iv"
                        android:src="@drawable/cx_fa_hb_icon"
                        android:scaleType="centerCrop"
                        android:layout_width="33dip"
                        android:layout_height="33dip" />
                </LinearLayout>

                <LinearLayout
                    
                    android:layout_marginLeft="5dip"
                    
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/cx_fa_answer_up_other_family_name_tv"
                        android:text="亲友一家"
                        android:textColor="#ffffff"
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/cx_fa_answer_up_other_score_tv"
                        android:text="23456"
                        android:textColor="#fffc00"
                        android:textSize="15sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
 <!-- 密邻一家 -->

			
			<LinearLayout 		
                android:layout_marginTop="70dip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">
			    
			    <ImageView 
			        android:id="@+id/cx_fa_answer_up_back_iv"
			        android:src="@drawable/talent_btn_backtop"
			        android:layout_width="105dip"
                    android:layout_height="59dip"/>
			    
			    <ImageView 
			        android:id="@+id/cx_fa_answer_up_share_iv"
			        android:layout_marginLeft="20dip"
			        android:src="@drawable/talent_btn_share"
			        android:layout_width="132dip"
                    android:layout_height="59dip"/>
			    
			    
			</LinearLayout>
			
			
			
			

        </LinearLayout>
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="20" />

</LinearLayout>