<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cx_fa_activity_title_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/cx_fa_co_transparent"
    android:gravity="center"
    android:orientation="horizontal" >

    <ProgressBar
        android:id="@+id/cx_fa_custom_toast_circleProgressBar"
        style="?@android:style/Widget.ProgressBar.Small"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/cx_fa_loading_more_title_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:text="@string/cx_fa_custom_loading_more_text"
        android:textColor="@android:color/darker_gray"
        android:textSize="15sp" />

</LinearLayout>