<?xml version="1.0" encoding="utf-8"?><!-- 更多页面 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e4e4e4"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/navi_topbar"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/cx_fa_more_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dip"
            android:background="@drawable/cx_fa_menu_btn"
            android:paddingLeft="11dp"
            android:textSize="16sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/cx_fa_more_title_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="3dp"
            android:text="@string/cx_fa_nls_more"
            android:textColor="@android:color/white"
            android:textSize="22sp" />

        <Button
            android:id="@+id/cx_fa_setting_title_more"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dip"
            android:background="@drawable/cx_fa_title_right_btn_bg"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="@color/cx_fa_co_navi_button_text"
            android:textSize="16sp"
            android:visibility="invisible" />
    </RelativeLayout>
    <!-- 顶部菜单行 -->

    <LinearLayout
        android:id="@+id/cx_fa_more_row1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#f5f5f5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/cx_fa_more_btn_other"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/morebutton"
                    android:gravity="center"
                    android:minHeight="80dip"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="46dip"
                        android:layout_height="46dip"
                        android:background="@drawable/set_more_btngame" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dip"
                        android:text="@string/cx_fa_more_text_answer"
                        android:textColor="#b0000000"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/cx_fa_more_answer_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="#19000000"
                android:visibility="gone" />
        </FrameLayout>
        <!-- 谁家最聪明 -->

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#f5f5f5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#d4d4d4" />

                <LinearLayout
                    android:id="@+id/cx_fa_more_btn_reminder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/morebutton"
                    android:gravity="center"
                    android:minHeight="80dip"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="46dip"
                        android:layout_height="46dip"
                        android:background="@drawable/set_more_btnreminder" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dip"
                        android:text="@string/cx_fa_more_text_memorial_day"
                        android:textColor="#b0000000"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/cx_fa_more_memorial_day_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="#19000000"
                android:visibility="gone" />
        </FrameLayout>
        <!-- 我家纪念日 -->

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#f5f5f5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#d4d4d4" />

                <LinearLayout
                    android:id="@+id/cx_fa_more_btn_daily"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/morebutton"
                    android:gravity="center"
                    android:minHeight="80dip"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="46dip"
                        android:layout_height="46dip"
                        android:background="@drawable/set_more_btndaily" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dip"
                        android:text="@string/cx_fa_more_text_tabloid"
                        android:textColor="#b0000000"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/cx_fa_more_tabloid_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="#19000000"
                android:visibility="gone" />
        </FrameLayout>
        <!-- 我家小报 -->

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#d4d4d4" />

                <LinearLayout
                    android:id="@+id/cx_fa_more_btn_daily_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/morebutton"
                    android:gravity="center"
                    android:minHeight="80dip"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="46dip"
                        android:layout_height="46dip"
                        android:background="@drawable/set_more_btndaily" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dip"
                        android:text="@string/cx_fa_more_text_tabloid"
                        android:textColor="#b0000000"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/cx_fa_more_tabloid_img_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="#19000000"
                android:visibility="gone" />
        </FrameLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d4d4d4" />

    <LinearLayout
        android:id="@+id/cx_fa_more_row2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#f5f5f5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/cx_fa_more_btn_feedback"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/morebutton"
                    android:gravity="center"
                    android:minHeight="80dip"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="46dip"
                        android:layout_height="46dip"
                        android:background="@drawable/set_more_btnfeedback" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dip"
                        android:text="@string/cx_fa_more_text_help_response"
                        android:textColor="#b0000000"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/cx_fa_more_help_response_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="#19000000"
                android:visibility="gone" />
        </FrameLayout>
        <!-- 意见反馈 -->

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#f5f5f5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <View
                    android:layout_width="1dip"
                    android:layout_height="match_parent"
                    android:background="#d4d4d4" />

                <LinearLayout
                    android:id="@+id/cx_fa_more_btn_inviteFriend"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/morebutton"
                    android:gravity="center"
                    android:minHeight="80dip"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="46dip"
                        android:layout_height="46dip"
                        android:background="@drawable/set_more_btninvite" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dip"
                        android:text="@string/cx_fa_more_text_recommend_friends"
                        android:textColor="#b0000000"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/cx_fa_more_recommend_friends_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="#19000000"
                android:visibility="gone" />
        </FrameLayout>
        <!-- 推荐给亲友 -->

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#f5f5f5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:layout_width="1dip"
                    android:layout_height="match_parent"
                    android:background="#d4d4d4" />

                <LinearLayout
                    android:id="@+id/cx_fa_more_btn_set"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/morebutton"
                    android:gravity="center"
                    android:minHeight="80dip"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="46dip"
                        android:layout_height="46dip"
                        android:background="@drawable/set_more_btnset" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dip"
                        android:text="@string/cx_fa_more_text_setting"
                        android:textColor="#b0000000"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/cx_fa_more_setting_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="#19000000"
                android:visibility="gone" />
        </FrameLayout>
        <!-- 设置 -->

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d4d4d4" />

    <LinearLayout
        android:id="@+id/cx_fa_more_row3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#f5f5f5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:layout_width="1dip"
                    android:layout_height="match_parent"
                    android:background="#d4d4d4" />

                <LinearLayout
                    android:id="@+id/more_bind_device"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/morebutton"
                    android:gravity="center"
                    android:minHeight="80dip"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="46dip"
                        android:layout_height="46dip"
                        android:background="@drawable/set_more_btnset" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dip"
                        android:text="@string/more_bind_device"
                        android:textColor="#b0000000"
                        android:textSize="12sp" />

                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_more_bind_device"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="#19000000"
                android:visibility="gone" />
        </FrameLayout>


        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#f5f5f5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:layout_width="1dip"
                    android:layout_height="match_parent"
                    android:background="#d4d4d4" />

                <LinearLayout
                    android:id="@+id/more_chooese_device"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/morebutton"
                    android:gravity="center"
                    android:minHeight="80dip"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="46dip"
                        android:layout_height="46dip"
                        android:background="@drawable/set_more_btnset" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dip"
                        android:text="@string/more_chooese_device"
                        android:textColor="#b0000000"
                        android:textSize="12sp" />

                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_more_chooese_device"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="#19000000"
                android:visibility="gone" />
        </FrameLayout>
    </LinearLayout>

</LinearLayout>