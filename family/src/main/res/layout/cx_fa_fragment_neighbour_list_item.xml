<!-- 密邻帖子-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content" 
    android:orientation="vertical" android:background="@color/cx_fa_co_background_grey"
    >
    
    <LinearLayout
	    android:layout_width="match_parent" android:layout_height="wrap_content" 
	    android:orientation="vertical" android:background="@null"
	    android:layout_marginLeft="15dip" android:layout_marginRight="15dip"
	    android:layout_marginBottom="3dip"
	    >
           
	    <!-- 日期 -->
	    <TextView android:id="@+id/nb_invitation_speakdata" android:gravity="right"
	        android:layout_width="match_parent" android:layout_height="wrap_content"
	        android:text="13 5月" android:layout_weight="0"/>
    </LinearLayout>
    
    
    <LinearLayout
	    android:layout_width="match_parent" android:layout_height="wrap_content" 
	    android:orientation="vertical" android:background="@drawable/neighbor_backwhite"
	    android:layout_marginLeft="12dip" android:layout_marginRight="12dip"
	    android:layout_marginBottom="3dip"
	    android:id="@+id/nb_invitation_layout"
	    >
	    
        <LinearLayout 
            android:layout_marginTop="5dip" 
            android:layout_marginLeft="5dip" 
            android:layout_marginRight="5dip"
            android:layout_width="match_parent" android:layout_height="wrap_content" 
	    	android:orientation="horizontal" android:background="@null"
	    	android:layout_marginBottom="3dip"
	    	android:id="@+id/nb_invitation_headlayout"
            >
            <LinearLayout 
                 	android:layout_width="wrap_content" 
	            	android:layout_height="wrap_content"
	            	android:padding="1dip"
	            	android:background="@drawable/cx_fa_neighbour_icon_bg">
            
            <com.chuxin.family.widgets.CxImageView 
                android:layout_width="42dip" 
	            android:layout_height="42dip" 
	            android:id="@+id/nb_invitation_girlhead" 
	            android:scaleType="centerCrop"
	            android:layout_weight="0"
	            
	            android:src="@drawable/cx_fa_wf_icon_small"/>
            </LinearLayout>
            
            <LinearLayout 
                	android:layout_marginLeft="6dip"
                 	android:layout_width="wrap_content" 
	            	android:layout_height="wrap_content"
	            	android:padding="1dip"
	            	android:background="@drawable/cx_fa_neighbour_icon_bg">
            
            <com.chuxin.family.widgets.CxImageView android:layout_width="42dip" 
	            android:layout_height="42dip" 
	            android:id="@+id/nb_invitation_boyhead" 
	            android:scaleType="centerCrop"
	            
	            android:layout_weight="0"
	            android:src="@drawable/cx_fa_hb_icon_small"/>
            </LinearLayout>
            <TextView android:layout_gravity="center_vertical"
                android:layout_width="match_parent" android:layout_height="wrap_content"
	                android:id="@+id/nb_invitation_familyname" android:text="@string/cx_fa_neighbour_family_name"
	                android:textColor="#bb000000"
	                android:textSize="16sp"
	                android:singleLine="true"
	                android:ellipsize="middle"
	                android:layout_weight="1"
	                android:layout_marginLeft="6dip"/>
            
            <!-- <ImageView 
                android:id="@+id/nb_invitation_iv_chat"
                android:layout_marginRight="10dip"
                android:layout_marginLeft="5dip"
                android:layout_gravity="center_vertical"
                android:layout_width="25dip" 
                android:layout_height="25dip"
                android:background="@drawable/cx_fa_nb_list_chat_btn"
                android:visibility="gone"
                /> -->
            
        </LinearLayout>
        
        <LinearLayout 
            android:layout_marginTop="5dip" 
            android:layout_marginLeft="5dip" 
            android:layout_marginRight="5dip"
            android:layout_width="match_parent" android:layout_height="wrap_content" 
	    	android:orientation="horizontal" android:background="@null"
	    	android:layout_marginBottom="3dip"
	    	android:id="@+id/nb_invitation_headlayout_message"
	    	android:visibility="gone"
            >
            
            <TextView android:layout_gravity="center_vertical"
                	android:layout_width="wrap_content" 
                	android:layout_height="wrap_content"
	                android:id="@+id/nb_invitation_familyname_message" 
	                android:text="我们给欧阳和小丽一家留言"
	                android:textColor="#bb000000"
	                android:textSize="16sp"	                
	                android:layout_weight="1"
	                android:singleLine="true"
	                android:ellipsize="middle"
	                />
            
           <LinearLayout 
               android:layout_marginLeft="6dip"
               android:layout_gravity="right"
               android:layout_width="wrap_content" 
	           android:layout_height="wrap_content"
	           android:padding="1dip">
            
	            <LinearLayout 
	                 	android:layout_width="wrap_content" 
		            	android:layout_height="wrap_content"
		            	android:padding="1dip"
		            	android:background="@drawable/cx_fa_neighbour_icon_bg">
	            
	            <com.chuxin.family.widgets.CxImageView 
	                android:layout_width="42dip" 
		            android:layout_height="42dip" 
		            android:id="@+id/nb_invitation_girlhead_message" 
		            android:scaleType="centerCrop"
		            android:layout_weight="0"
		            
		            android:src="@drawable/cx_fa_wf_icon_small"/>
	            </LinearLayout>
	            
	            <LinearLayout 
	                	android:layout_marginLeft="6dip"
	                 	android:layout_width="wrap_content" 
		            	android:layout_height="wrap_content"
		            	android:padding="1dip"
		            	android:layout_marginRight="5dip" 
		            	android:background="@drawable/cx_fa_neighbour_icon_bg">
	            
	            <com.chuxin.family.widgets.CxImageView 
	                android:layout_width="42dip" 
		            android:layout_height="42dip"
		            
		            android:id="@+id/nb_invitation_boyhead_message" 
		            android:scaleType="centerCrop"		            
		            android:layout_weight="0"
		            android:src="@drawable/cx_fa_hb_icon_small"/>
	            </LinearLayout>    
            
            </LinearLayout>
        </LinearLayout>
        
	 	<View android:background="@drawable/dot_line_repeat_bg" android:layout_width="match_parent"
	 	    android:layout_marginLeft="2dip" 
            android:layout_marginRight="2dip"
	        android:layout_height="1dp" android:layout_marginTop="5dp" android:layout_marginBottom="5dp"/>
	    
	    <!-- 称呼和时间 -->
	    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent"
	        android:layout_height="wrap_content" android:layout_weight="0"
	        android:layout_marginLeft="5dip" 
            android:layout_marginRight="5dip"
	        android:layout_marginBottom="4dip" >	       
	            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
	                android:id="@+id/nb_invitation_speakname" android:text="老公"
	                android:textColor="#aa000000"
	                android:singleLine="true"
	                android:ellipsize="end"	                
	                android:textSize="16sp"/>
	            <TextView 
	                android:layout_weight="1"
	                android:layout_width="wrap_content" 
	                android:layout_height="wrap_content"
	                android:gravity="left"
	                android:id="@+id/nb_invitation_speaktime" android:text="16:00" android:textColor="#70000000"
	                android:textSize="12sp" android:layout_marginLeft="5dip"/>
	            
	            <ImageView 
	               android:visibility="gone"
	                android:id="@+id/nb_invitation_speaktype" 
	                android:layout_width="22dp" 
	                android:layout_height="22dp"
	                android:scaleType="centerCrop"
	                android:layout_gravity="right|center_vertical"
	                android:src="@drawable/neighbor_private"
	                android:layout_marginRight="10dip"/>
	    </LinearLayout>
	    
	    <!-- 文字内容(需要这行) -->
	    <com.chuxin.family.widgets.CustomTextView 
	        android:id="@+id/nb_invitation_speakword" android:ellipsize="end" 
	        android:layout_width="match_parent" android:layout_height="wrap_content"
	        android:text="学而不思则罔，思而不学则殆"
	        android:layout_marginLeft="10dip" 
            android:layout_marginRight="10dip"
	        android:layout_weight="0" android:padding="7dip"
	        android:gravity="center_vertical" android:layout_marginBottom="4dip" 
	        android:textColor="#80000000"
	        android:textSize="15sp"
	        />
	    
        <TextView 
	        android:id="@+id/nb_invitation_text_more"
	        android:gravity="right"
	        android:textColor="#d78355"
	        android:textSize="14sp"
	        android:layout_marginRight="15dip"
	        android:layout_marginBottom="10dip"
	        android:layout_width="match_parent" 
	        android:layout_height="wrap_content"
	        android:layout_weight="0"
	        android:visibility="gone"/>

	    <!-- 分享的图片（9张：3 x 3） -->
	        <LinearLayout android:orientation="vertical" android:layout_width="wrap_content"
	            android:layout_marginLeft="1dip" 
            	android:layout_marginRight="1dip"
	            android:layout_height="wrap_content" 
	            android:id="@+id/cx_fa_neighbour_shared_photos"
	            >
	            <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content"
	                android:layout_height="wrap_content" android:gravity="center">
		          <com.chuxin.family.widgets.CxImageView android:layout_width="100dip" 
		                android:layout_height="100dip"
			        android:src="@drawable/chatview_imageloading"
			        android:background="@drawable/edittext_bg"
			        android:padding="6dip" android:layout_weight="1"
			        android:id="@+id/nb_invitation_speakphoto_first_9image" android:layout_gravity="center"
			        android:maxWidth="100dp" android:maxHeight="100dp"
			        android:layout_margin="2dip"
			        android:scaleType="fitCenter" />
		          <com.chuxin.family.widgets.CxImageView android:layout_width="100dip" 
		                android:layout_height="100dip"
	                    	android:src="@drawable/chatview_imageloading"
		                android:background="@drawable/edittext_bg"
		                android:padding="6dip" android:layout_weight="1"
		                android:id="@+id/nb_invitation_speakphoto_second_9image" android:layout_gravity="center"
		                android:adjustViewBounds="true" 
		                android:maxWidth="100dp" android:maxHeight="100dp"
		                android:layout_margin="2dip"
		                android:scaleType="fitCenter" />
		          <com.chuxin.family.widgets.CxImageView android:layout_width="100dip" 
		                android:layout_height="100dip"
	                    	android:src="@drawable/chatview_imageloading"
	                    	android:background="@drawable/edittext_bg"
	                    	android:padding="6dip" android:layout_weight="1"
	                    	android:id="@+id/nb_invitation_speakphoto_third_9image" android:layout_gravity="center"
	                    	android:adjustViewBounds="true" 
	                    	android:maxWidth="100dp" android:maxHeight="100dp"
	                    	android:layout_margin="2dip"
	                    	android:scaleType="fitCenter" />
	            </LinearLayout>
	            <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content"
	                android:layout_height="wrap_content" android:gravity="center">
		          <com.chuxin.family.widgets.CxImageView android:layout_width="100dp" 
		                android:layout_height="100dp"
                        	android:src="@drawable/chatview_imageloading"
                        	android:background="@drawable/edittext_bg"
                        	android:padding="6dip" android:layout_weight="1"
                        	android:id="@+id/nb_invitation_speakphoto_forth_9image" android:layout_gravity="center"
                        	android:adjustViewBounds="true" 
                        	android:maxWidth="100dp" android:maxHeight="100dp"
                        	android:layout_margin="2dip"
                        	android:scaleType="fitCenter" />
                    	  <com.chuxin.family.widgets.CxImageView android:layout_width="100dp" 
                        	android:layout_height="100dp"
                        	android:src="@drawable/chatview_imageloading"
                        	android:background="@drawable/edittext_bg"
                        	android:padding="6dip" android:layout_weight="1"
                        	android:id="@+id/nb_invitation_speakphoto_fifth_9image" android:layout_gravity="center"
                        	android:adjustViewBounds="true" 
                        	android:maxWidth="100dp" android:maxHeight="100dp"
                        	android:layout_margin="2dip"
                        	android:scaleType="fitCenter" />
                    	  <com.chuxin.family.widgets.CxImageView android:layout_width="100dp" 
                        	android:layout_height="100dp"
                        	android:src="@drawable/chatview_imageloading"
                        	android:background="@drawable/edittext_bg"
                        	android:padding="6dip" android:layout_weight="1"
                        	android:id="@+id/nb_invitation_speakphoto_sixth_9image" android:layout_gravity="center"
                        	android:adjustViewBounds="true" 
                        	android:maxWidth="100dp" android:maxHeight="100dp"
                        	android:layout_margin="2dip"
                        	android:scaleType="fitCenter" />
	            </LinearLayout>
	            <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content"
                    	android:layout_height="wrap_content" android:gravity="center">
                    	  <com.chuxin.family.widgets.CxImageView android:layout_width="100dp" 
                        	android:layout_height="100dp"
                        	android:src="@drawable/chatview_imageloading"
	                        android:background="@drawable/edittext_bg"
	                        android:padding="6dip" android:layout_weight="1"
	                        android:id="@+id/nb_invitation_speakphoto_seventh_9image" android:layout_gravity="center"
	                        android:adjustViewBounds="true" 
	                        android:maxWidth="100dp" android:maxHeight="100dp"
	                        android:layout_margin="2dip"
	                        android:scaleType="fitCenter" />
	                  <com.chuxin.family.widgets.CxImageView android:layout_width="100dp" 
	                        android:layout_height="100dp"
	                        android:src="@drawable/chatview_imageloading"
	                        android:background="@drawable/edittext_bg"
	                        android:padding="6dip" android:layout_weight="1"
	                        android:id="@+id/nb_invitation_speakphoto_eighth_9image" android:layout_gravity="center"
	                        android:adjustViewBounds="true" 
	                        android:maxWidth="100dp" android:maxHeight="100dp"
	                        android:layout_margin="2dip"
	                        android:scaleType="fitCenter" />
	                  <com.chuxin.family.widgets.CxImageView android:layout_width="100dp" 
	                        android:layout_height="100dp"
	                        android:src="@drawable/chatview_imageloading"
	                        android:background="@drawable/edittext_bg"
	                        android:padding="6dip" android:layout_weight="1"
	                        android:id="@+id/nb_invitation_speakphoto_nineth_9image" android:layout_gravity="center"
	                        android:adjustViewBounds="true" 
	                        android:maxWidth="100dp" android:maxHeight="100dp"
	                        android:layout_margin="2dip"
	                        android:scaleType="fitCenter" />
	            </LinearLayout>
	        </LinearLayout>
   
	    <!-- 评论和删除按钮 -->
	    <LinearLayout android:orientation="horizontal" android:gravity="right"
            android:layout_marginRight="5dip"
            android:layout_marginTop="10dip"
	        android:layout_width="match_parent" android:layout_height="wrap_content"
	        android:layout_weight="0">
	        <ImageButton android:id="@+id/nb_invitation_comment" 
	            android:background="@drawable/wezone_reply"
	            android:layout_width="wrap_content" android:layout_height="wrap_content"
	            android:layout_weight="0"/>
	        <ImageButton android:id="@+id/nb_invitation_delete" android:background="@drawable/wezone_more"
	            android:layout_width="wrap_content" android:layout_height="wrap_content"
	            android:layout_weight="0" android:layout_marginLeft="8dip"/>
	    </LinearLayout>
	    
	    <!-- 评论或回复 -->
	    <LinearLayout android:background="@drawable/neighbor_commentback" 
	        android:orientation="vertical" android:gravity="center_vertical"
	        android:layout_width="match_parent" android:layout_height="wrap_content"
	        android:id="@+id/nb_invitation_commentAndReplayOfRecord" android:layout_weight="1"
	        android:layout_marginBottom="3dip"
	        android:paddingRight="7dip"
	        android:layout_marginLeft="5dip" 
            android:layout_marginRight="5dip"/>
	    
	    <LinearLayout 
	        android:layout_width="match_parent" 
	        android:layout_height="wrap_content"
	        android:orientation="vertical">
	        <Button 
	            android:id="@+id/nb_invitation_addneighbour"
	            style="@style/cx_fa_style_orange_button_text"	 
	            android:background="@drawable/neighbor_btn_orange"   	           
	            android:text="@string/cx_fa_neighbour_fragment_add_neighbour"
	            android:textColor="#99674d"
	            android:textSize="15sp"	            
	            android:gravity="center"
	            android:textStyle="normal"
	            android:layout_marginLeft="5dip" 
            	android:layout_marginRight="5dip"
	            android:layout_width="match_parent"  
	        	android:layout_height="wrap_content"/>
	        
	        <TextView 
	            android:id="@+id/nb_invitation_group_id"	           
	            android:text="@string/cx_fa_my_neighbour_number_tip_formatted"
	            android:textColor="#50000000"
	            android:textSize="13sp"	            
	            android:gravity="center"
	            android:textStyle="normal"
	            android:layout_marginTop="2dip"
	            android:layout_marginLeft="5dip" 
            	android:layout_marginRight="5dip"
            	android:layout_marginBottom="3dip"
	            android:layout_width="match_parent"  
	        	android:layout_height="wrap_content"/>
	    </LinearLayout>
	    
	
	        


	</LinearLayout>
	
    <View android:background="@null" android:layout_width="match_parent"
	        android:layout_height="1dp" android:layout_marginTop="10dp"/>
    
</LinearLayout>















