<!-- 密邻home的回复item -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content" 
    android:orientation="horizontal" android:background="@drawable/cx_fa_neighbour_reply_background"
    android:gravity="left"	android:paddingTop="3dip"  android:paddingBottom="3dip"
    >   
       
    <LinearLayout 
        android:layout_width="match_parent" 
        android:layout_height="wrap_content"
        android:gravity="left" 
        >
    
    <ImageView 
        android:id="@+id/nb_post_reply_unread"
        android:layout_width="10dip" 
        android:layout_height="10dip"
        android:scaleType="centerCrop"
        android:layout_gravity="left|center_vertical"
        android:src="@drawable/chat_newvoice"
        android:visibility="invisible"
 		/>
    
    <TextView 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content"
        android:layout_gravity="left|center_vertical"
        android:id="@+id/nb_post_reply_text_content" 
        android:gravity="left|center_vertical"
        android:textSize="14sp"
        android:text="ddddd"
        android:textColor="#75000000"/>
    
    <!-- <com.chuxin.family.widgets.CustomTextView 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content"
        android:id="@+id/nb_post_reply_text_content" 
        android:gravity="left|center_vertical"
        android:textSize="14sp"
        android:textColor="#75000000"
       />  -->
    <com.ant.liao.chuxin.EnhancedGifView 
        android:layout_width="20dp"
        android:gravity="left|center_vertical"
        android:layout_height="20dp" 
        android:id="@+id/nb_post_reply_expression_content"
        android:src="@drawable/facethumb_anwei"
        android:visibility="gone"
        />
    
    <LinearLayout
         android:id="@+id/nb_post_reply_record_content_linearlayout"
         android:layout_width="70dip"
         android:layout_height="22dp"
         android:layout_gravity="center_vertical"
         android:background="@drawable/neighbor_commentbubble"
         android:gravity="center"
         android:visibility="gone"
         >

		<FrameLayout 
		   	android:layout_width="wrap_content"
         	android:layout_height="wrap_content" 
         	>
                <ImageView
                    android:paddingTop="1dip"
                    android:paddingBottom="1dip"
                    android:id="@+id/nb_post_reply_record_content_image"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:visibility="visible"
                    android:scaleType="centerInside"
                    android:layout_gravity="center_vertical" 
                    android:src="@drawable/neighbor_commentvoice"
                    />
                 <ProgressBar
                    android:id="@+id/nb_post_reply_record_content_circleProgressBar"
                    style="@android:style/Widget.ProgressBar.Small"
                    android:layout_width="11dp"
                    android:layout_height="11dp"
                    android:visibility="gone" 
                    android:layout_gravity="center_vertical"/>
		</FrameLayout>
          <TextView
              android:id="@+id/nb_post_reply_record_content_audiolength"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:paddingLeft="3dp"
              android:text="90&apos;&apos;"
              android:textColor="@color/cx_fa_co_black"
              android:textIsSelectable="false"
              android:textSize="12sp" 
              />
     </LinearLayout>


    <TextView 
        android:layout_gravity="bottom"
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content"
        android:id="@+id/nb_post_reply_time" 
        android:gravity="left|center_vertical"
        android:layout_marginLeft="7dp"
        android:textColor="#70000000"
        android:textSize="8sp"
        />
    </LinearLayout>
</LinearLayout>