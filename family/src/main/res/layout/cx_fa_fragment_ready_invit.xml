<?xml version="1.0" encoding="utf-8"?> <!-- 结对界面 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e4e4ea"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:background="@drawable/navi_topbar"
        android:gravity="center_vertical" >

        <Button
            android:id="@+id/cx_fa_invite_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dip"
            android:background="@drawable/cx_fa_menu_btn"
            android:paddingLeft="11dp"
            android:textSize="16sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/cx_fa_invite_title_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="3dp"
            android:text="@string/cx_fa_invite_to_own"
            android:textColor="@android:color/white"
            android:textSize="22sp" />

        <Button
            android:id="@+id/cx_fa_invite_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dip"
            android:background="@drawable/cx_fa_title_right_btn_bg"
            android:gravity="center"
            android:text="@string/cx_fa_role_invite_text"
            android:textAlignment="center"
            android:textColor="@color/cx_fa_co_navi_button_text"
            android:textSize="16sp"
            android:visibility="visible" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/cx_fa_main_login_backimage"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:layout_marginLeft="15dip"
                android:layout_marginRight="15dip"
                android:layout_marginTop="7dip"                
                android:gravity="bottom"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="50dip"
                    android:layout_height="50dip"
                    android:src="@drawable/pair_logo" />

                <TextView
                    android:id="@+id/cx_fa_pair_top_word_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:text="@string/cx_fa_role_pair_top_word"
                    android:textColor="#90000000"
                    android:textSize="17sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dip"
                android:layout_marginRight="15dip"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/cx_fa_invite_num_tip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dip"
                    android:layout_marginRight="3dip"
                    android:layout_marginTop="10dip"
                    android:gravity="right"
                    android:text="@string/cx_fa_role_congratulation"
                    android:textColor="#90000000"
                    android:textSize="15sp" />

                <!--
                     <com.chuxin.family.widgets.NiceEditText 
		            android:id="@+id/cx_fa_request_pair_number"
		            style="@style/cx_fa_style_invite_edittext"
		            custom:tip="@string/cx_fa_mate_invite_number"
		            />
                -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dip"
                    android:layout_margin="1dip"
                    android:background="@drawable/edittext_bg"
                    android:gravity="center" >

                    <EditText
                        android:id="@+id/cx_fa_request_pair_number_code"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:hint="@string/cx_fa_role_pair_edit_hint"
                        android:padding="7dip"
                        android:textColor="#90000000"
                        android:textSize="16sp" />
                </LinearLayout>

                <Button
                    android:id="@+id/cx_fa_request_pair"
                    android:layout_width="match_parent"
                    android:layout_height="40dip"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/cx_fa_pair_btn_dredge_bg"
                    android:text="@string/cx_fa_pair_directly"
                    android:textColor="#ffffff"
                    android:textSize="18sp"
                     />

                <!--
                 <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="0"
                android:background="#c3c4c8" />
                -->


                <!--
                 <ImageView
                android:id="@+id/cx_fa_pair_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:scaleType="centerInside"
                android:src="@drawable/cx_fa_role_versiontip" />
