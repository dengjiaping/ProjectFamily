    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E4E4EA"
    android:orientation="vertical" >

    <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginTop="12dp"
         android:layout_marginLeft="12dp"
         android:layout_marginRight="12dp"
         android:orientation="vertical" >

        <com.chuxin.family.widgets.CalendarNiceSelector 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            custom:texts="@array/cx_fa_strs_reminder_date_weekly_displays"
            custom:values="@array/cx_fa_strs_reminder_date_weekly_values"
            android:id="@+id/cx_fa_view_calendar_edit_weekly_date__selector" />
             
    </LinearLayout>

</LinearLayout>