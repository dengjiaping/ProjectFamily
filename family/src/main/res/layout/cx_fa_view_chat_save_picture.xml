<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:orientation="vertical">
<RelativeLayout
    android:layout_weight="0"
    android:id="@+id/cx_fa_activity_title_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/navi_topbar"
    android:gravity="center"
    android:layout_gravity="center"
    >

    <Button
        android:id="@+id/cx_fa_view_chat_title_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="5dip"
        android:background="@drawable/cx_fa_back_btn"
        android:paddingLeft="11dp"
        android:textAlignment="center"
        android:textColor="@color/cx_fa_co_navi_button_text"
        android:visibility="visible" />

    <TextView 
        android:id="@+id/cx_fa_view_chat__title_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:textSize="20sp" android:layout_centerHorizontal="true"/>
    
    <Button android:layout_alignParentRight="true"
        android:visibility="visible"
        android:id="@+id/cx_fa_view_chat_title_save"
        android:layout_width="wrap_content" android:background="@drawable/cx_fa_title_right_btn_bg"
        android:layout_height="wrap_content"
        android:textColor="@color/cx_fa_co_navi_button_text"
        android:layout_marginRight="5dip" />


</RelativeLayout>

    <com.chuxin.family.widgets.CxZoomImage
        android:layout_weight="1"
        android:id="@+id/cx_fa_view_chat_chatting_picture"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="@color/cx_fa_co_transparent"
        />
    
</LinearLayout>