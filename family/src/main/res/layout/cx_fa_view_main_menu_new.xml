                    android:layout_height="1dip"
                    android:layout_marginLeft="15dip"
                    android:layout_marginRight="15dip"
                    android:background="@color/menu_item_fouced" />

                <LinearLayout
                    android:layout_marginTop="-2dip"
                    android:layout_marginBottom="-2dip"
                    android:id="@+id/unpair_more_layout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/single_item_in_line_height"
                    android:background="@color/menu_item_normal"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/menuPage_layout_invite_2"
                        android:layout_width="32dip"
                        android:layout_height="30dip"
                        android:layout_marginLeft="20dp"
                        android:clickable="false"
                        android:focusable="false"
                        android:src="@drawable/menu_icon_more" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:clickable="false"
                        android:focusable="false"
                        android:text="@string/cx_fa_nls_more"
                        android:textColor="@color/menu_item_text"
                        android:textSize="18sp" />
                </LinearLayout>
