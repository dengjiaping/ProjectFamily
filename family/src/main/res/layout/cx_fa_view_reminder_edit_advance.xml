    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E4E4EA"
    android:orientation="vertical" >

    <include layout="@layout/cx_fa_activity_title" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:layout_weight="0"/>

    <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
  	     android:layout_marginTop="12dp"
  	     android:layout_marginLeft="12dp"
  	     android:layout_marginRight="12dp"
         android:orientation="vertical" >

	    <com.chuxin.family.widgets.NiceSelector 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        custom:texts="@array/cx_fa_strs_reminder_advance_displays"
	        custom:values="@array/cx_fa_strs_reminder_advance_values"
	        android:id="@+id/cx_fa_view_reminder_edit_advance__selector" />
             
    </LinearLayout>

</LinearLayout>