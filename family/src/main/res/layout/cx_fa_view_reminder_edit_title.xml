<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E4E4EA"
    android:orientation="vertical" >

    <include layout="@layout/cx_fa_activity_title" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:layout_weight="0"/>

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
  	     android:layout_marginTop="12dp"
  	     android:layout_marginLeft="12dp"
  	     android:layout_marginRight="12dp"
         android:orientation="vertical" >

         <com.chuxin.family.widgets.NiceEditText 
             android:id="@+id/cx_fa_view_reminder_edit_title__title"
             custom:tip="@string/cx_fa_nls_tip_reminder_title"
             custom:maxLength="12"
             android:layout_width="match_parent"
             android:layout_height="wrap_content" 
             android:textColor="@android:color/black"/>
             
    </LinearLayout>

</LinearLayout>