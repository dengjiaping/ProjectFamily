<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cx_fa_widget_datepicker"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/cx_fa_co_datepicker_region_background"
    android:descendantFocusability="beforeDescendants"
    android:fitsSystemWindows="true"
    android:focusableInTouchMode="true"
    android:gravity="center_vertical|center_horizontal" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/cx_fa_datepicker_title_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:gravity="center_vertical"
            android:orientation="horizontal" >
			
            <LinearLayout 
                android:id="@+id/cx_fa_widget_datepicker_setting_layout"
                android:layout_width="25dip"
                android:layout_height="25dip"
                android:layout_marginLeft="7dip"
                android:gravity="center">
            
            <ImageView     
                android:id="@+id/cx_fa_widget_datepicker_setting_iv"          
                android:layout_width="18dip"
                android:layout_height="18dip"          
                android:src="@drawable/calendar_set_off" />
            
            </LinearLayout>

            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:background="@null"
                android:gravity="center_vertical"
                android:text="我要过农历"
                android:textColor="#37322f"
                android:textSize="16sp" />
            
            <TextView
                android:id="@+id/cx_fa_widget_datepicker_lunar_tv"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:background="@null"
                android:gravity="center_vertical"
                android:text="腊月初八"
                android:textColor="#37322f"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/cx_fa_widget_datepicker_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:baselineAligned="true"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/cx_fa_widget_datepicker__year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical" >

                <ImageButton
                    android:id="@+id/cx_fa_widget_datepicker__year__plus"
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:background="@drawable/cx_fa_bg_datepicker_plus_button_background"
                    android:scaleType="center"
                    android:src="@drawable/reminder_plus" />

                <com.chuxin.family.widgets.ValidEditText
                    android:id="@+id/cx_fa_widget_datepicker__year__edit"
                    style="@style/cx_fa_style_datetimepicker_font"
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:background="@drawable/cx_fa_bg_datepicker_edit_background" />

                <ImageButton
                    android:id="@+id/cx_fa_widget_datepicker__year__minus"
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:background="@drawable/cx_fa_bg_datepicker_minus_button_background"
                    android:scaleType="center"
                    android:src="@drawable/reminder_minus" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/cx_fa_widget_datepicker__month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical" >

                <ImageButton
                    android:id="@+id/cx_fa_widget_datepicker__month__plus"
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:background="@drawable/cx_fa_bg_datepicker_plus_button_background"
                    android:scaleType="center"
                    android:src="@drawable/reminder_plus" />

                <com.chuxin.family.widgets.ValidEditText
                    android:id="@+id/cx_fa_widget_datepicker__month__edit"
                    style="@style/cx_fa_style_datetimepicker_font"
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:background="@drawable/cx_fa_bg_datepicker_edit_background" />

                <ImageButton
                    android:id="@+id/cx_fa_widget_datepicker__month__minus"
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:background="@drawable/cx_fa_bg_datepicker_minus_button_background"
                    android:scaleType="center"
                    android:src="@drawable/reminder_minus" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/cx_fa_widget_datepicker__date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical" >

                <ImageButton
                    android:id="@+id/cx_fa_widget_datepicker__date__plus"
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:background="@drawable/cx_fa_bg_datepicker_plus_button_background"
                    android:scaleType="center"
                    android:src="@drawable/reminder_plus" />

                <com.chuxin.family.widgets.ValidEditText
                    android:id="@+id/cx_fa_widget_datepicker__date__edit"
                    style="@style/cx_fa_style_datetimepicker_font"
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:background="@drawable/cx_fa_bg_datepicker_edit_background" />

                <ImageButton
                    android:id="@+id/cx_fa_widget_datepicker__date__minus"
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:background="@drawable/cx_fa_bg_datepicker_minus_button_background"
                    android:scaleType="center"
                    android:src="@drawable/reminder_minus" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>