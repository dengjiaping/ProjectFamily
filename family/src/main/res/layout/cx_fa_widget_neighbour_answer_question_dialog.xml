<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@null" >

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/neighbor_backwhite"
        android:orientation="vertical"
        android:padding="15dip" >

        <TextView
            android:id="@+id/cx_fa_simple_dialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dip"
            android:text="提示"
            android:textColor="#aa000000"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginTop="10dip"
            android:background="@drawable/dot_line_repeat_bg" />

        <TextView    
            android:id="@+id/cx_fa_answer_question_dialog_text_tv"     
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="20dip"
            android:text="今日题目已答完！"
            android:textColor="#88000000"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/cx_fa_answer_question_dialog_yes_btn"     
                style="@style/cx_fa_style_white_button_text"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_margin="3dip"
                android:layout_weight="1"
                android:background="@drawable/neighbour_btnwhite"
                android:text="取消"
                android:textColor="@color/cx_fa_co_reminder_tip_deep_gray"
                android:textSize="16sp" />

            <Button                
                android:id="@+id/cx_fa_answer_question_dialog_no_btn"     
                style="@style/cx_fa_style_orange_button_text"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_margin="3dip"
                android:layout_weight="1"
                android:background="@drawable/neighbour_btnorange"
                android:text="确定"
                android:textColor="@color/cx_fa_co_btn_brown_text"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>