<?xml version="1.0" encoding="utf-8"?>

<FrameLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/edittext_bg_normal">
    
    <ImageView 
       	android:id="@+id/cx_fa_neighbour_invite_dialog_cancel"
        android:layout_width="20dip"
        android:layout_height="20dip"
        android:scaleType="centerCrop"
        android:layout_gravity="top|right"
        android:src="@drawable/remind_input_x"/>

	<LinearLayout 
	    android:layout_width="280dip"
	    android:layout_height="wrap_content"
	    android:background="@null"
	    android:gravity="center"
	    android:orientation="vertical" >
	
	    <ImageView
	        android:id="@+id/cx_fa_neighbour_invite_dialog_image"
	        android:layout_width="150dip"
	        android:layout_height="150dip"
	        android:scaleType="centerCrop"
	        android:layout_marginTop="25dip"
	        android:src="@drawable/cx_fa_invite_qr_code" />
	
	    <TextView
	        android:id="@+id/cx_fa_neighbour_invite_dialog_text1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="15dip"
	        android:text="让他扫描二维码"
	        android:textColor="#aa000000"
	        android:textSize="14sp" />
	
	    <TextView
	        android:id="@+id/cx_fa_neighbour_invite_dialog_text2"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="3dip"
	        android:text="马上安装老婆应用"
	        android:textColor="#aa000000"
	        android:textSize="14sp"
	        android:layout_marginBottom="25dip" />
	
	</LinearLayout>

</FrameLayout>