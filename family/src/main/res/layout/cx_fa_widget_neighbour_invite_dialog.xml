<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    
    <LinearLayout 
        android:layout_width="290dp"
    	android:layout_height="wrap_content"
    	android:orientation="vertical"
    	android:padding="15dip"
    	android:layout_gravity="center_horizontal"
    	android:background="@drawable/neighbor_backwhite">
    	   
	    <LinearLayout
	        android:gravity="center_horizontal" 
	        android:orientation="vertical"
	        android:layout_marginTop="10dip"
	        android:layout_width="match_parent"
	    	android:layout_height="wrap_content">
	    	
	        
	        <Button 
	           android:layout_margin="5dip"
	            android:id="@+id/nb_list_invite_dialog_by_sms"
	            android:layout_width="240dip"
	    		android:layout_height="45dip"
	    		style="@style/cx_fa_style_orange_button_text"
	    		android:textSize="16sp"
	    		android:textColor="@color/cx_fa_co_btn_brown_text"
	    		android:background="@drawable/neighbour_btnorange"
	    		android:text="通过短信邀请亲友"/>
	        
	        <Button 
	           android:layout_margin="5dip"
	            android:id="@+id/nb_list_invite_dialog_by_weixin"
	            android:layout_width="240dip"
	    		android:layout_height="45dip"
	    		style="@style/cx_fa_style_orange_button_text"
	    		android:textSize="16sp"
	    		android:textColor="@color/cx_fa_co_btn_brown_text"
	    		android:background="@drawable/neighbour_btnorange"
	    		android:text="通过微信邀请亲友"/>
	        
	        <Button 
	           android:layout_margin="5dip"
	            android:id="@+id/nb_list_invite_dialog_by_code"
	            android:layout_width="240dip"
	    		android:layout_height="45dip"
	    		style="@style/cx_fa_style_orange_button_text"
	    		android:textSize="16sp"
	    		android:textColor="@color/cx_fa_co_btn_brown_text"
	    		android:background="@drawable/neighbour_btnorange"
	    		android:text="让亲友扫描二维码"/>
	        
	        
	        <Button
	            android:layout_margin="5dip"
	            android:id="@+id/nb_list_invite_dialog_cancel" 
	            android:layout_width="240dip"
	    		android:layout_height="45dip"
	    		style="@style/cx_fa_style_white_button_text"
	    		android:textSize="16sp"
	    		android:textColor="@color/cx_fa_co_reminder_tip_deep_gray"
	    		android:background="@drawable/neighbour_btnwhite"
	    		android:text="取消"/>
	        
	    </LinearLayout>
    
    </LinearLayout>
    
    

</LinearLayout>