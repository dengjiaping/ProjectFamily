<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:fitsSystemWindows="true"
    	android:gravity="center_vertical|center_horizontal"
        android:background="@color/cx_fa_co_datepicker_region_background"
        android:descendantFocusability="beforeDescendants"
		android:focusableInTouchMode="true"
		android:id="@+id/cx_fa_widget_timepicker">
        
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:baselineAligned="true"
    android:orientation="horizontal">
    
    <LinearLayout
        android:id="@+id/cx_fa_widget_timepicker__hour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical" >

        <ImageButton
            android:id="@+id/cx_fa_widget_timepicker__hour__plus"
            android:layout_width="70dp"
            android:layout_height="40dp"       
            android:src="@drawable/reminder_plus"
            android:scaleType="center"
            android:background="@drawable/cx_fa_bg_datepicker_plus_button_background" />
        <com.chuxin.family.widgets.ValidEditText
            android:id="@+id/cx_fa_widget_timepicker__hour__edit"
            android:layout_width="70dp"
            android:layout_height="40dp"
    		android:background="@drawable/cx_fa_bg_datepicker_edit_background"
            style="@style/cx_fa_style_datetimepicker_font" />
        <ImageButton
            android:id="@+id/cx_fa_widget_timepicker__hour__minus"
            android:layout_width="70dp"
            android:layout_height="40dp"       
            android:src="@drawable/reminder_minus"
            android:scaleType="center"
            android:background="@drawable/cx_fa_bg_datepicker_minus_button_background" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/cx_fa_widget_timepicker__minute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical" >
        <ImageButton
            android:id="@+id/cx_fa_widget_timepicker__minute__plus"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:src="@drawable/reminder_plus"
            android:scaleType="center"
            android:background="@drawable/cx_fa_bg_datepicker_plus_button_background" />
        <com.chuxin.family.widgets.ValidEditText
            android:id="@+id/cx_fa_widget_timepicker__minute__edit"
            android:layout_width="70dp"
            android:layout_height="40dp"
    		android:background="@drawable/cx_fa_bg_datepicker_edit_background"
            style="@style/cx_fa_style_datetimepicker_font" />
        <ImageButton
            android:id="@+id/cx_fa_widget_timepicker__minute__minus"
            android:layout_width="70dp"
            android:layout_height="40dp"       
            android:src="@drawable/reminder_minus"
            android:scaleType="center"
            android:background="@drawable/cx_fa_bg_datepicker_minus_button_background" />
    </LinearLayout>


    <Button
        android:id="@+id/cx_fa_widget_timepicker__morning__button"
        android:layout_width="70dp"
        android:layout_height="40dp"       
        android:text="@string/cx_fa_nls_datepicker_monring"
        android:scaleType="center"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center_vertical"
        android:textColor="@android:color/black"
        android:background="@drawable/cx_fa_bg_datepicker_button_background" />
</LinearLayout>
</RelativeLayout>